<Page
    x:Class="MasterDetail.wp8.ItemListDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MasterDetail.wp8"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="53"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Name="txbTitle" Text="Detalhe"  Style="{StaticResource HeaderTextBlockStyle}" Margin="20,-10,0,0"/>
        <TextBlock Grid.Row="1" Name="txbSubTitle" HorizontalAlignment="Left" Text="TextBlock" VerticalAlignment="Top" Style="{StaticResource SubheaderTextBlockStyle}" Margin="20"/>
    </Grid>
</Page>
